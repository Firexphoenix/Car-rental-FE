<div class="row mb-4">
    <div class="col-md-6">
        <h2><i class="fas fa-users"></i> Danh Sách Người Dùng</h2>
    </div>
    <div class="col-md-6 text-end">
        <a href="/users/create" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Thêm Người Dùng
        </a>
    </div>
</div>

<!-- Users Table -->
{{#if users}}
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th><i class="fas fa-user"></i> Tên đầy đủ</th>
                        <th><i class="fas fa-envelope"></i> Email</th>
                        <th><i class="fas fa-phone"></i> Điện thoại</th>
                        <th><i class="fas fa-user-tag"></i> Vai trò</th>
                        <th><i class="fas fa-info-circle"></i> Trạng thái</th>
                        <th><i class="fas fa-calendar"></i> Ngày tạo</th>
                        <th class="text-center"><i class="fas fa-cog"></i> Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>
                            <strong>{{this.fullName}}</strong>
                            <br>
                            <small class="text-muted">@{{this.username}}</small>
                        </td>
                        <td>{{this.email}}</td>
                        <td>{{this.phone}}</td>
                        <td>
                            <span class="badge bg-{{#if (eq this.role 'ADMIN')}}danger{{else}}primary{{/if}}">
                                {{this.role}}
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-{{statusBadge this.status}}">
                                {{this.status}}
                            </span>
                        </td>
                        <td>{{formatDate this.createdAt}}</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <a href="/users/{{this._id}}" class="btn btn-outline-info" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <button class="btn btn-outline-danger" onclick="deleteUser('{{this._id}}')" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                Hiển thị <strong>{{users.length}}</strong> người dùng
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="alert alert-info text-center">
    <i class="fas fa-info-circle"></i> Chưa có người dùng nào trong hệ thống
</div>
{{/if}}

<script>
function editUser(id) {
    window.location.href = `/users/${id}/edit`;
}

function deleteUser(id) {
    if (confirm('Bạn có chắc chắn muốn xóa người dùng này?')) {
        fetch(`http://localhost:3000/api/users/${id}`, {
            method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
            alert('Đã xóa người dùng thành công!');
            location.reload();
        })
        .catch(error => {
            alert('Lỗi khi xóa người dùng: ' + error.message);
        });
    }
}
</script>
